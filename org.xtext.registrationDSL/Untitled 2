grammar dk.sdu.mmmi.mdsd.BasicEntityExampleLanguage with org.eclipse.xtext.common.Terminals

generate basicEntityExampleLanguage "http://www.sdu.dk/mmmi/mdsd/BasicEntityExampleLanguage"

EntitySystem: // system University
	'system' name=ID declarations+=Declaration*
	;
	
Declaration:
	Entity | Relation
	;

Entity: // entity Student : Person
	'entity' name=ID (':' base=[Entity])? attributes+=Attribute*
;

Attribute: // attribute name: String
	'attribute' name=ID ':' type=ID
;

Relation: // relation from Student follows* to enrolled* Course
	'relation' 'from' fromType=[Entity] fromName=ID (fromMultiple?='*')? 
	'to' toName=ID (toMultiple?='*')? toType=[Entity]
;
